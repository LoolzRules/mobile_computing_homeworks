<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.loolzrules.mobile_computing.ActivityMain">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchTouch"
        android:text="Touch Interaction" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchChuck"
        android:text="HTTP/Toolbar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchLeveler"
        android:text="Sensors" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchCamera"
        android:text="Camera and DIP" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchService"
        android:text="Start Service" />

    <TextView
        android:id="@+id/tv_service_progress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Service progress is displayed here" />

</LinearLayout>
